<resources>
    <!-- Outer Field Style for TextInputLayout -->
    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <!-- Additional attributes can be defined here -->
    </style>

    <!-- Inner Field Style for TextInputEditText -->
    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <!-- Additional attributes can be defined here -->
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.AppCompat.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>


